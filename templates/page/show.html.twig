{% extends 'base.html.twig' %}

{% block title %}{{ page.metaTitle }}{% endblock %}
{% block meta_description %}{{ stripHtmlTags(page.metaDescription) }}{% endblock %}
{% block image %}{{ absolute_url(asset('/upload/media/' ~ posts.first.imageTitle.fileName)|imagine_filter('full')) }}{% endblock %}


{% block body %}
    <section>
        <div class="container">
                <div class="col-12">
                    <h1>{{ page.title }}</h1>

                    <div class="content">
                        {{ page.content|raw }}
                    </div>
                </div>
        </div>
    </section>
{% endblock %}