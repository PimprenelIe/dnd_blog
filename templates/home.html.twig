{% block body %}
    <!-- featured post -->
    <section>
        <div class="container-fluid p-sm-0">
            <div class="row featured-post-slider">
                {% for post in lastPosts %}
                    <div class="col-lg-3 col-sm-6 mb-2 mb-lg-0 px-1">
                        <article class="card bg-dark text-center text-white border-0 rounded-0">
                            <img class="card-img rounded-0 img-fluid w-100"
                                 src="{{ asset('/upload/media/' ~ post.imageTitle.fileName)|imagine_filter('first_page') }}"
                                 alt="post-thumb">
                            <a class="card-img-overlay" href="{{ path('post_show', {'slug': post.slug}) }}"></a>
                            <div class="card-content">
                                <p class="text-uppercase">{{ post.categories.first.title }}</p>
                                <h4 class="card-title mb-4"><a class="text-white"
                                                               href="{{ path('post_show', {'slug': post.slug}) }}">{{ post.title }}</a>
                                </h4>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- /featured post -->

