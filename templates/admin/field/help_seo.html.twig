{% if field.value >= 0 %}
    {% if field.value == 0 %}
        <i class="fas fa-circle" style="color: red;"></i>
    {% elseif field.value == 1 %}
        <i class="fas fa-circle" style="color: orange;"></i>
    {% else %}
        <i class="fas fa-circle" style="color: green;"></i>
    {% endif %}
{% else %}
    <i class="fas fa-circle"></i>
{% endif %}